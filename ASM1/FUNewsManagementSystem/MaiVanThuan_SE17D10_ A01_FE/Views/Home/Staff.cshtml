@{
    ViewData["Title"] = "Bảng điều khiển Staff";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .staff-dashboard-container {
        max-width: 1200px;
        margin: 30px auto;
        padding: 25px;
        background-color: #f8f9fa;
        border-radius: 12px;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.15);
    }

    h2 {
        text-align: center;
        color: #222;
        font-size: 24px;
        font-weight: bold;
        margin-bottom: 25px;
    }

    .dashboard-list {
        list-style: none;
        padding: 0;
        max-width: 600px;
        margin: 0 auto;
    }

        .dashboard-list li {
            margin-bottom: 15px;
        }

        .dashboard-list a {
            display: block;
            padding: 18px;
            background-color: #007bff;
            color: white;
            text-decoration: none;
            border-radius: 6px;
            font-size: 18px;
            font-weight: bold;
            text-align: center;
            transition: all 0.3s ease-in-out;
        }

            .dashboard-list a:hover {
                background-color: #0056b3;
                transform: scale(1.05);
            }
</style>

<div class="staff-dashboard-container">
    <h2>Chào mừng bạn đến với Bảng điều khiển của Staff</h2>

    <ul class="dashboard-list">
        <li>
            <a href="/Staff/CategoryList">📁 Quản lý chuyên mục</a>
        </li>
        <li>
            <a href="/Staff/AllNews">📰 Quản lý bài viết</a>
        </li>
        <li>
            <a href="/Staff/MyNews?staffId=@Context.Session.GetInt32("id")">📝 Bài viết của tôi</a>
        </li>
        <li>
            <a href="/Staff/Profile?staffId=@Context.Session.GetInt32("id")">👤 Thông tin cá nhân</a>
        </li>
    </ul>
</div>