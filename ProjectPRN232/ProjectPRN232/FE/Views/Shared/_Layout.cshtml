<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Quản Lý Sân Bóng</title>

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600;700&display=swap" rel="stylesheet">

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/custom-theme.css" asp-append-version="true" /> @await RenderSectionAsync("Styles", required: false)
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-white border-bottom box-shadow">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area=""
                   asp-controller="@(User.Identity.IsAuthenticated && User.IsInRole("Admin") ? "Home" : "Pitch")"
                   asp-action="@(User.Identity.IsAuthenticated && User.IsInRole("Admin") ? "AdminIndex" : "Index")">
                    <i class="fas fa-futbol"></i> Quản Lý Sân bóng
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-lg-inline-flex justify-content-end">
                    <ul class="navbar-nav">
                        @if (User.Identity != null && User.Identity.IsAuthenticated)
                        {
                            @if (User.IsInRole("User")) // <--- THÊM DÒNG NÀY ĐỂ KIỂM TRA ROLE
                            {
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Pitch" asp-action="Index"><i class="fas fa-plus-circle me-1"></i>Đặt sân</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="BookingHistory" asp-action="Index"><i class="fas fa-history me-1"></i>Lịch sử</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Account" asp-action="Profile"><i class="fas fa-user-circle me-1"></i>@User.Identity.Name</a>
                                </li>
                            }
                            // Nút đăng xuất luôn hiển thị nếu đã đăng nhập (dù là Admin hay User)
                            <li class="nav-item">
                                <form asp-controller="Auth" asp-action="Logout" method="post" class="d-flex">
                                    <button type="submit" class="nav-link btn-logout"><i class="fas fa-sign-out-alt me-1"></i>Đăng xuất</button>
                                </form>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Auth" asp-action="Login"><i class="fas fa-sign-in-alt me-1"></i>Đăng nhập</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Auth" asp-action="Register"><i class="fas fa-user-plus me-1"></i>Đăng ký</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container mt-4">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="footer border-top text-muted text-center">
        <div class="container">
            &copy; 2025 - Quản Lý Sân Bóng - <a asp-area="" asp-controller="Home" asp-action="Privacy">Chính sách bảo mật</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html> 