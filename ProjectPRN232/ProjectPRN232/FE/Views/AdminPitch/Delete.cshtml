@model BusinessObject.DTOs.PitchDTO

@{
    ViewData["Title"] = "Delete Pitch";
}

<h2>Are you sure you want to delete this Pitch?</h2>

<div>
    <h4></h4>
    <dl class="row">
        <dt class="col-sm-2">Pitch ID</dt>
        <dd class="col-sm-10">@Model.PitchId</dd>

        <dt class="col-sm-2">Status</dt>
        <dd class="col-sm-10">@Model.Status</dd>

        <dt class="col-sm-2">Price</dt>
        <dd class="col-sm-10">@Model.PricePitch</dd> @* Sử dụng PricePitch từ DTO *@
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="PitchId" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>