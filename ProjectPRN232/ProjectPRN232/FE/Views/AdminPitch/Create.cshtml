@model BusinessObject.DTOs.PitchCreateDTO
@{
    ViewData["Title"] = "Thêm sân mới";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card">
                <div class="card-header">
                    <h4>@ViewData["Title"]</h4>
                </div>
                <div class="card-body p-4">
                    <form asp-action="Create" method="post" enctype="multipart/form-data">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="PitchId" class="form-label"></label>
                                <input asp-for="PitchId" class="form-control" />
                                <span asp-validation-for="PitchId" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="Status" class="form-label"></label>
                                <input asp-for="Status" class="form-control" />
                                <span asp-validation-for="Status" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="Price" class="form-label"></label>
                                <input asp-for="Price" class="form-control" />
                                <span asp-validation-for="Price" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="TimeEnd" class="form-label"></label>
                                <input asp-for="TimeEnd" type="datetime-local" class="form-control" />
                                <span asp-validation-for="TimeEnd" class="text-danger"></span>
                            </div>
                            <div class="col-12 mb-3">
                                <label asp-for="ImageFile" class="form-label">Hình ảnh</label>
                                <input asp-for="ImageFile" type="file" class="form-control" />
                                <span asp-validation-for="ImageFile" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="d-flex gap-2 mt-4">
                            <button type="submit" class="btn btn-success">Tạo mới</button>
                            <a asp-action="Index" class="btn btn-secondary">Hủy bỏ</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>