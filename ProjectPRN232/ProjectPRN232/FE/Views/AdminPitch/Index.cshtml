@model IEnumerable<BusinessObject.DTOs.PitchDTO>
@{
    ViewData["Title"] = "Quản lý Sân bóng";
}

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="display-6 fw-bold mb-1">@ViewData["Title"]</h1>
            <p class="text-muted">Thêm, sửa, xóa và quản lý thông tin các sân bóng.</p>
        </div>
        <a class="btn btn-primary" asp-action="Create">
            <i class="fas fa-plus me-2"></i>Thêm sân mới
        </a>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success">@TempData["SuccessMessage"]</div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
    }

    <div class="card shadow-sm">
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead>
                    <tr>
                        <th>Mã sân</th>
                        <th>Loại sân</th>
                        <th class="text-center">Trạng thái</th>
                        <th>Giá</th>
                        <th>Hình ảnh</th>
                        <th class="text-end">Hành động</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var pitch in Model)
                    {
                        <tr>
                            <td><strong>@pitch.PitchId</strong></td>
                            <td>Sân @pitch.PitchType người</td>
                            <td class="text-center">
                                @if (pitch.Status == 1)
                                {
                                    <span class="badge bg-success">Sẵn sàng</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">Bảo trì</span>
                                }
                            </td>
                            <td class="fw-bold text-danger">@pitch.PricePitch.ToString("N0") VNĐ</td>
                            <td>
                                @if (!string.IsNullOrEmpty(pitch.Image))
                                {
                                    <img src="@pitch.Image" alt="Pitch Image" class="img-thumbnail" style="width: 100px; height: 60px; object-fit: cover;" />
                                }
                                else
                                {
                                    <span class="text-muted">Không có ảnh</span>
                                }
                            </td>
                            <td class="text-end">
                                <div class="d-flex gap-2 justify-content-end">
                                    <a class="btn btn-sm btn-outline-primary" asp-action="Edit" asp-route-id="@pitch.PitchId">
                                        <i class="fas fa-edit"></i> Sửa
                                    </a>
                                    @* <a class="btn btn-sm btn-outline-danger" asp-action="Delete" asp-route-id="@pitch.PitchId">
                                        <i class="fas fa-trash"></i> Xóa
                                    </a> *@
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>