@model FE.Models.AccountCreateDTO

@{
    ViewData["Title"] = "Đăng ký tài khoản";
    Layout = null; // Vẫn giữ null để không hiển thị Navbar
}

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Quản Lý Sân bóng</title>
    <!-- Vẫn cần Bootstrap CSS cho styling của form -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <!-- Bạn có thể include site.css nếu muốn các style chung khác áp dụng -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <!-- Font Awesome cho icon -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" integrity="sha512-Fo3rlalDLsX2n21gTz3I7b/YkI/hU6/f5x1z/e1VlB0eM/Qk5/5B0M5A5Q5M5Q5M5Q5M5Q5M5Q5M5Q5M5Q5M5Q5M5Q5M5Q5M5Q5M5Q5M5Q5M5Q5M5Q55g==" crossorigin="anonymous" referrerpolicy="no-referrer" />
</head>

<style>
    body {
        background-image: url('https://images.unsplash.com/photo-1508092147167-ee662b694b7c?q=80&w=2940&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D'); /* Nền bóng đá */
        background-size: cover;
        background-position: center;
        background-repeat: no-repeat;
        min-height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        font-family: 'Arial', sans-serif;
    }

    .register-container {
        background-color: rgba(255, 255, 255, 0.95);
        padding: 30px;
        border-radius: 15px;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.2);
        max-width: 800px; /* Tăng max-width để chứa 2 cột */
        width: 90%;
        text-align: center;
        margin: 20px;
    }

        .register-container h1 {
            color: #004d40;
            margin-bottom: 20px;
            font-size: 2em;
            font-weight: bold;
        }

        .register-container hr {
            border-top: 2px solid #004d40;
            margin-bottom: 25px;
        }

    .form-group {
        margin-bottom: 15px;
        text-align: left;
    }

        .form-group label {
            color: #333;
            font-weight: bold;
            margin-bottom: 5px;
            display: block;
            font-size: 0.95em;
        }

    .form-control {
        border-radius: 8px;
        border: 1px solid #ddd;
        padding: 10px 12px;
        font-size: 1em;
        width: 100%;
        box-sizing: border-box;
    }

        .form-control:focus {
            border-color: #007bff;
            box-shadow: 0 0 0 0.25rem rgba(0, 123, 255, 0.25);
        }

    .btn-primary {
        background-color: #28a745;
        border-color: #28a745;
        padding: 10px 20px;
        font-size: 1.1em;
        border-radius: 8px;
        transition: background-color 0.3s ease, transform 0.2s ease;
        width: 100%;
        margin-top: 15px;
    }

        .btn-primary:hover {
            background-color: #218838;
            border-color: #1e7e34;
            transform: translateY(-2px);
        }

    .text-danger {
        color: #dc3545;
        font-size: 0.85em;
        margin-top: 3px;
        display: block;
    }

    .login-link {
        margin-top: 20px;
        font-size: 1em;
    }

        .login-link p {
            color: #666;
        }

        .login-link a {
            color: #007bff;
            text-decoration: none;
            font-weight: bold;
            transition: color 0.3s ease;
        }

            .login-link a:hover {
                color: #0056b3;
                text-decoration: underline;
            }
</style>

<div class="register-container">
    <h1><i class="fas fa-user-plus"></i> Đăng ký tài khoản</h1>
    <hr />
    <form asp-action="Register" asp-controller="Auth" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="row">
            <!-- BẮT ĐẦU DÒNG CHIA CỘT -->
            <div class="col-md-6">
                <!-- CỘT THỨ NHẤT -->
                <div class="form-group">
                    <label asp-for="UserName" class="control-label">Tên tài khoản</label>
                    <input asp-for="UserName" class="form-control" placeholder="Tên đăng nhập của bạn" />
                    <span asp-validation-for="UserName" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Email" class="control-label">Email</label>
                    <input asp-for="Email" class="form-control" placeholder="Địa chỉ email của bạn" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Name" class="control-label">Tên đầy đủ (Không bắt buộc)</label>
                    <input asp-for="Name" class="form-control" placeholder="Tên của bạn" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Gender" class="control-label">Giới tính (Không bắt buộc)</label>
                    <select asp-for="Gender" class="form-control">
                        <option value="">Chọn giới tính</option>
                        <option value="Nam">Nam</option>
                        <option value="Nữ">Nữ</option>
                        <option value="Khác">Khác</option>
                    </select>
                    <span asp-validation-for="Gender" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="PhoneNumber" class="control-label">Số điện thoại (Không bắt buộc)</label>
                    <input asp-for="PhoneNumber" class="form-control" placeholder="Số điện thoại của bạn" />
                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="DateOfBirth" class="control-label">Ngày sinh (Không bắt buộc)</label>
                    <input asp-for="DateOfBirth" class="form-control" type="date" />
                    <span asp-validation-for="DateOfBirth" class="text-danger"></span>
                </div>
            </div> <!-- KẾT THÚC CỘT THỨ NHẤT -->

            <div class="col-md-6">
                <!-- BẮT ĐẦU CỘT THỨ HAI -->
                <div class="form-group">
                    <label asp-for="Password" class="control-label">Mật khẩu</label>
                    <input asp-for="Password" class="form-control" type="password" placeholder="Mật khẩu của bạn" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="ConfirmPassword" class="control-label">Xác nhận mật khẩu</label>
                    <input asp-for="ConfirmPassword" class="form-control" type="password" placeholder="Nhập lại mật khẩu" />
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>

                <!-- Bạn có thể thêm các trường khác vào cột này nếu có (ví dụ: Avata, OTP nếu có trong DTO) -->
                <div class="form-group">
                    <label asp-for="Avata" class="control-label">Ảnh đại diện (Không bắt buộc)</label>
                    <input asp-for="Avata" class="form-control" placeholder="URL ảnh đại diện hoặc tải ảnh lên" />
                    <span asp-validation-for="Avata" class="text-danger"></span>
                </div>

            </div> <!-- KẾT THÚC CỘT THỨ HAI -->
        </div> <!-- KẾT THÚC DÒNG CHIA CỘT -->

        <div class="form-group">
            <input type="submit" value="Đăng ký ngay!" class="btn btn-primary" />
        </div>
    </form>

    <div class="login-link">
        <p>Đã có tài khoản? <a asp-controller="Auth" asp-action="Login">Đăng nhập ngay!</a></p>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
}s