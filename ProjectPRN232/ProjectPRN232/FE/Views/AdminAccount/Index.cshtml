@model IEnumerable<FE.Models.AccountViewModel>
@{
    ViewData["Title"] = "Quản lý Tài khoản";
}

<div class="container py-4">
    <div class="d-flex flex-column flex-md-row justify-content-between align-items-center mb-4">
        <div>
            <h1 class="display-6 fw-bold mb-1">@ViewData["Title"]</h1>
            <p class="text-muted">Tìm kiếm, xem và quản lý tất cả người dùng trong hệ thống.</p>
        </div>
        <form asp-action="Index" method="get" class="d-flex ms-md-auto">
            <input type="text" name="search" value="@ViewBag.Search" class="form-control me-2" placeholder="Tìm theo tên người dùng..." style="width: 250px;" />
            <input type="hidden" name="page" value="1" />
            <button type="submit" class="btn btn-primary">
                <i class="fas fa-search"></i>
            </button>
        </form>
    </div>

    <div class="card shadow-sm">
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Tên tài khoản</th>
                        <th>Email</th>
                        <th>Tên đầy đủ</th>
                        <th>Vai trò</th>
                        <th class="text-center">Trạng thái</th>
                        <th class="text-center">Hành động</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        @foreach (var account in Model)
                        {
                            <tr>
                                <td><span class="badge bg-primary">@account.UserId</span></td>
                                <td><strong>@account.UserName</strong></td>
                                <td>@account.Email</td>
                                <td>@account.Name</td>
                                <td>@account.RoleId</td>
                                <td class="text-center">
                                    @if (account.StatusOtp == 1)
                                    {
                                        <span class="badge bg-success">Hoạt động</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">Bị khóa</span>
                                    }
                                </td>
                                <td class="text-center">
                                    <form asp-action="ToggleBlock" method="post" style="display:inline;">
                                        <input type="hidden" name="id" value="@account.UserId" />
                                        <input type="hidden" name="search" value="@ViewBag.Search" />
                                        <input type="hidden" name="page" value="@ViewBag.CurrentPage" />
                                        @if (account.StatusOtp == 1)
                                        {
                                            <button type="submit" class="btn btn-sm btn-danger" title="Khóa tài khoản này">
                                                <i class="fas fa-lock me-1"></i> Khóa
                                            </button>
                                        }
                                        else
                                        {
                                            <button type="submit" class="btn btn-sm btn-success" title="Mở khóa tài khoản này">
                                                <i class="fas fa-lock-open me-1"></i> Mở khóa
                                            </button>
                                        }
                                    </form>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="7" class="text-center p-4">Không tìm thấy tài khoản nào khớp với tìm kiếm của bạn.</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        @if (ViewBag.TotalPages > 1)
        {
            <div class="card-footer d-flex justify-content-end">
                <nav aria-label="Page navigation">
                    <ul class="pagination mb-0">
                        <li class="page-item @(ViewBag.CurrentPage == 1 ? "disabled" : "")">
                            <a class="page-link" href="@Url.Action("Index", new { search = ViewBag.Search, page = ViewBag.CurrentPage - 1 })">Trước</a>
                        </li>

                        @for (int i = 1; i <= ViewBag.TotalPages; i++)
                        {
                            <li class="page-item @(i == ViewBag.CurrentPage ? "active" : "")">
                                <a class="page-link" href="@Url.Action("Index", new { search = ViewBag.Search, page = i })">@i</a>
                            </li>
                        }

                        <li class="page-item @(ViewBag.CurrentPage == ViewBag.TotalPages ? "disabled" : "")">
                            <a class="page-link" href="@Url.Action("Index", new { search = ViewBag.Search, page = ViewBag.CurrentPage + 1 })">Sau</a>
                        </li>
                    </ul>
                </nav>
            </div>
        }
    </div>
</div>