@{
    ViewData["Title"] = "Thanh toán thành công!";
}

<div class="container mt-5">
    <div class="card text-center border-success shadow-sm">
        <div class="card-header bg-success text-white">
            <i class="bi bi-check-circle-fill" style="font-size: 2rem;"></i>
            <h3>Thanh toán thành công!</h3>
        </div>
        <div class="card-body">
            <h5 class="card-title text-success">Cảm ơn bạn đã sử dụng dịch vụ của chúng tôi!</h5>
            <p class="card-text">Hóa đơn của bạn đã được xử lý thành công.</p>
            <p class="card-text">@ViewBag.Message</p>
            <a asp-controller="Pitch" asp-action="Index" class="btn btn-primary mt-3">Quay về danh sách sân</a>
            <a href="/BookingHistory/Index" class="btn btn-info mt-3 ms-2">Xem lịch sử đặt sân</a>
        </div>
        <div class="card-footer text-muted">
            Mã giao dịch của bạn sẽ được gửi đến email.
        </div>
    </div>
</div>

@section Scripts {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
}