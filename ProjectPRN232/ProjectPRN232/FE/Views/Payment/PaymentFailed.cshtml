@{
    ViewData["Title"] = "Thanh toán thất bại";
}

<div class="container mt-5">
    <div class="card text-center border-danger shadow-sm">
        <div class="card-header bg-danger text-white">
            <i class="bi bi-x-circle-fill" style="font-size: 2rem;"></i>
            <h3>Thanh toán thất bại!</h3>
        </div>
        <div class="card-body">
            <h5 class="card-title text-danger">Có lỗi xảy ra trong quá trình thanh toán.</h5>
            <p class="card-text">@ViewBag.ErrorMessage</p>
            <a href="/" class="btn btn-primary mt-3">Quay về trang chủ</a>
            <button onclick="history.back()" class="btn btn-secondary mt-3 ms-2">Thử lại</button>
        </div>
        <div class="card-footer text-muted">
            Vui lòng kiểm tra lại thông tin hoặc liên hệ hỗ trợ nếu cần.
        </div>
    </div>
</div>

@section Scripts {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
}