@model IEnumerable<FE.Models.PitchViewModel>
@{
    ViewData["Title"] = "Danh sách sân bóng";
}

<div class="container py-4">
    <h1 class="display-6 fw-bold mb-3">@ViewData["Title"]</h1>
    <p class="text-muted mb-4">Chọn sân bóng bạn muốn để xem chi tiết và đặt lịch.</p>

    @if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
    {
        <div class="alert alert-danger">@ViewBag.ErrorMessage</div>
    }

    <div class="row g-4">
        @foreach (var pitch in Model)
        {
            <div class="col-md-6 col-lg-4">
                <div class="card h-100">
                    <img src="@(pitch.Image ?? "placeholder.jpg")" class="card-img-top" alt="Ảnh sân @pitch.PitchId" style="height: 200px; object-fit: cover;" />
                    <div class="card-body d-flex flex-column">
                        <h4 class="card-title">Sân @pitch.PitchId</h4>
                        <p class="card-text text-muted">Loại sân: Sân @pitch.PitchType người</p>
                        <p class="fs-5 fw-bold text-danger">@pitch.PricePitch.ToString("N0") VNĐ</p>
                        <div class="mt-auto">
                            <a asp-action="Detail" asp-controller="Pitch" asp-route-id="@pitch.PitchId" class="btn btn-primary w-100">
                                Xem chi tiết & Đặt sân
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>