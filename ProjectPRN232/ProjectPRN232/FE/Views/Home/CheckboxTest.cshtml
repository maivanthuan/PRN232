@{
    // Dùng layout trống để không bị ảnh hưởng bởi các script khác
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <title>Checkbox Test</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css">
    <style>
        body {
            padding: 40px;
        }

        .slot-item {
            margin-bottom: 10px;
            width: 200px;
        }

            .slot-item input[type="checkbox"] {
                display: none;
            }

                .slot-item input[type="checkbox"]:checked + label {
                    background-color: #28a745;
                    color: white;
                    border-color: #28a745;
                }
    </style>
</head>
<body>
    <h1>Trang kiểm tra Checkbox</h1>
    <p>Hãy thử chọn nhiều khung giờ dưới đây:</p>

    <div class="slot-item">
        <input type="checkbox" name="TestSlots" value="1" id="slot-1" />
        <label for="slot-1" class="btn btn-outline-success">07:00 - 08:30</label>
    </div>

    <div class="slot-item">
        <input type="checkbox" name="TestSlots" value="2" id="slot-2" />
        <label for="slot-2" class="btn btn-outline-success">08:30 - 10:00</label>
    </div>

    <div class="slot-item">
        <input type="checkbox" name="TestSlots" value="3" id="slot-3" />
        <label for="slot-3" class="btn btn-outline-success">10:00 - 11:30</label>
    </div>

</body>
</html>