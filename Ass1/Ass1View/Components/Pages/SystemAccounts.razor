@page "/systemaccounts"
@using Ass1View.Service
@inject ApiService ApiService

<h3>Quản lý Tài khoản</h3>

@if (loading)
{
    <p><em>Loading...</em></p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Account ID</th>
                <th>Account Name</th>
                <th>Email</th>
                <th>Role</th>
                <th>Password</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var account in systemAccounts)
            {
                <tr>
                    <td>@account.AccountId</td>
                    <td>@account.AccountName</td>
                    <td>@account.AccountEmail</td>
                    <td>@account.AccountRole</td>
                    <td>@account.AccountPassword</td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    private List<SystemAccount> systemAccounts = new();
    private bool loading = true;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            systemAccounts = await ApiService.GetSystemAccountsAsync();
        }
        catch (Exception ex)
        {
            Console.WriteLine(ex.Message);
        }
        finally
        {
            loading = false;
        }
    }
}