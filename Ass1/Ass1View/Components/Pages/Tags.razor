@page "/tags"
@using Ass1View.Service
@inject ApiService ApiService

<h3>Quản lý Thẻ</h3>

@if (loading)
{
    <p><em>Loading...</em></p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Tag ID</th>
                <th>Tag Name</th>
                <th>Note</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var tag in tags)
            {
                <tr>
                    <td>@tag.TagId</td>
                    <td>@tag.TagName</td>
                    <td>@tag.Note</td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    private List<Tag> tags = new();
    private bool loading = true;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            tags = await ApiService.GetTagsAsync();
        }
        catch (Exception ex)
        {
            Console.WriteLine(ex.Message);
        }
        finally
        {
            loading = false;
        }
    }
}